---
import { ChevronRight } from 'lucide-react';
import AnimatedInfinity from '@/components/AnimatedInfinity';
---

<div class="relative min-h-[80vh] flex items-center pt-20">
  <div class="absolute inset-0 overflow-hidden">
    <div
      class="absolute top-[20%] left-[10%] w-[300px] h-[300px] rounded-full bg-aeternum-accent/5 blur-[100px]"
    >
    </div>
    <div
      class="absolute bottom-[20%] right-[10%] w-[200px] h-[200px] rounded-full bg-aeternum-accent/5 blur-[100px]"
    >
    </div>
  </div>
  <div
    class="relative z-10 w-full max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col items-center text-center"
  >
    <div class="animate-slide-down">
      <AnimatedInfinity client:load />
      <p
        class="text-xl md:text-2xl text-aeternum-accent/80 max-w-2xl mx-auto mb-10"
      >
        Más allá del tiempo, Aeternum.
      </p>
    </div>

    <div>
      <a href="#products">
        <button
          class="flex items-center space-x-2 bg-aeternum-silver text-aeternum-black font-medium px-8 py-4 rounded-full border border-transparent hover:bg-transparent hover:text-aeternum-silver hover:border-aeternum-silver transition-all duration-400 hover:cursor-pointer transform hover:scale-105"
        >
          <span>Explorar productos</span>
          <ChevronRight size={20} />
        </button>
      </a>
    </div>
  </div>
</div>
