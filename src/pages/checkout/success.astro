---
import Layout from '@/layouts/Layout.astro';
import { CheckCircle } from 'lucide-react';
---

<script>
  // Ejecutar clearCart al cargar la página
  import { useCartStore } from '@/stores/cartStore';

  document.addEventListener('DOMContentLoaded', () => {
    const clearCart = useCartStore.getState().clearCart;
    clearCart();
  });
</script>

<Layout title="Pago Exitoso | Aeternum">
  <main
    class="flex flex-col items-center justify-center min-h-screen bg-[var(--color-aeternum-black)] p-4 text-[var(--color-aeternum-accent)]"
  >
    <div
      class="w-full max-w-md p-8 space-y-6 bg-[var(--color-aeternum-medium)] rounded-lg shadow-lg text-center"
    >
      <div class="flex justify-center">
        <CheckCircle className="h-16 w-16 text-green-500" />
      </div>

      <h1 class="text-2xl font-bold text-[var(--color-aeternum-silver)]">
        ¡Pago exitoso!
      </h1>

      <p class="text-[var(--color-aeternum-accent)]">
        Gracias por tu compra. Hemos recibido tu pago y estamos procesando tu
        pedido.
      </p>

      <div class="pt-4">
        <a
          href="/orders"
          class="text-[var(--color-aeternum-highlight)] hover:underline font-medium"
        >
          Ver mis pedidos
        </a>
      </div>

      <div class="pt-2">
        <a
          href="/"
          class="inline-block px-6 py-3 bg-[var(--color-aeternum-light)] text-[var(--color-aeternum-silver)] font-medium rounded-md hover:bg-[var(--color-aeternum-dark)] border border-[var(--color-aeternum-accent)] transition-colors"
        >
          Volver a la tienda
        </a>
      </div>
    </div>
  </main>
</Layout>
